<%- include('../layouts/main', { body: `
<div class="mb-4">
    <a href="/staff" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left me-2"></i>Back to Staff
    </a>
    <h1>Tier Management</h1>
</div>

<div class="row g-4">
    ${tiers.map(tier => `
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header" style="border-left: 4px solid ${tier.color}">
                <h5 class="mb-0">${tier.name}</h5>
                <small class="text-muted">Tier ${tier.tier_level}</small>
            </div>
            <div class="card-body">
                <form action="/staff/tiers/${tier.id}" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" value="${tier.name}" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="color" name="color" class="form-control form-control-color" value="${tier.color}">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Discord Role ID</label>
                        <input type="text" name="discord_role_id" class="form-control" value="${tier.discord_role_id || ''}" placeholder="Optional">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Permissions (JSON)</label>
                        <textarea name="permissions" class="form-control" rows="4">${JSON.stringify(JSON.parse(tier.permissions || '{}'), null, 2)}</textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="bi bi-check me-1"></i>Save
                    </button>
                </form>
            </div>
        </div>
    </div>
    `).join('')}
</div>
` }) %>
