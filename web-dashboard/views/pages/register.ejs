<%- include('../layouts/main', { body: `
<div class="mb-4">
    <a href="/staff" class="btn btn-outline-secondary mb-3">
        <i class="bi bi-arrow-left me-2"></i>Back to Staff
    </a>
    <h1>Register New Staff</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form action="/auth/register" method="POST">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Username *</label>
                            <input type="text" name="username" class="form-control" required minlength="3" maxlength="50">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Email *</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Password *</label>
                            <input type="password" name="password" class="form-control" required minlength="6">
                            <small class="text-muted">Minimum 6 characters</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Tier *</label>
                            <select name="tier" class="form-select" required>
                                <option value="1">Trial Staff (Tier 1)</option>
                                <option value="2">Moderator (Tier 2)</option>
                                <option value="3">Senior Moderator (Tier 3)</option>
                                <option value="4">Admin (Tier 4)</option>
                                <option value="5">Owner (Tier 5)</option>
                            </select>
                            <small class="text-muted">Cannot assign tier higher than your own</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Minecraft UUID</label>
                            <input type="text" name="minecraft_uuid" class="form-control" placeholder="Optional">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Discord ID</label>
                            <input type="text" name="discord_id" class="form-control" placeholder="Optional">
                        </div>
                        
                        <div class="col-12">
                            <hr>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-person-plus me-2"></i>Create Staff Account
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Tier Permissions</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong style="color: #90EE90;">Trial Staff</strong>
                    <p class="small text-muted mb-0">Mute, Kick, Warn, Freeze</p>
                </div>
                <div class="mb-3">
                    <strong style="color: #00BFFF;">Moderator</strong>
                    <p class="small text-muted mb-0">+ Ban</p>
                </div>
                <div class="mb-3">
                    <strong style="color: #9370DB;">Senior Moderator</strong>
                    <p class="small text-muted mb-0">+ View Staff List</p>
                </div>
                <div class="mb-3">
                    <strong style="color: #FF6347;">Admin</strong>
                    <p class="small text-muted mb-0">+ Manage Staff</p>
                </div>
                <div>
                    <strong style="color: #FFD700;">Owner</strong>
                    <p class="small text-muted mb-0">Full Access</p>
                </div>
            </div>
        </div>
    </div>
</div>
` }) %>
